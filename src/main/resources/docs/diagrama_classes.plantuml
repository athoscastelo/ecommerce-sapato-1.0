}
class Pessoa {
    - nome: String
    - cpf: String
    - dataNascimento: String
    - telefone: String
    - endereco: String
}

class Funcionario {
    - cargo: String

}

class Cliente {
    - listaPedidos: List<Pedido>
    - listaFavoritos: List<Sapato>
}
 
    class TipoSapato {
        - descricao: String

    }

    class Sapato {
        - preco: Double
        - estoque: Integer
        - numeracao: Numeracao
        - materialSapato: MaterialSapato
        - cadarco: CorCadarco
        - tiposapato: TipoSapato
